<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div id="new-user-form-container">     
                <div>
                <% if @user.errors %>
                    <% @user.errors.full_messages.each  do |message| %>
                        <p class="badge badge-danger" style="background: #BD1E1E;"><%= message %></p>
                    <% end %>
                <% end %>
                </div>
                
                <i class="fas fa-user-plus fa-3x"></i>
                <h1 id="new-user-header">New User</h1>

                <div class="form-group">
                    <%= form_for @user, controller: 'users', action: 'update' do |f| %>
                    <label for="username">Username</label><br>
                    <%= f.text_field :username, class: "form-control" %>
                    <br>
                    <label for="password">Password</label><br>
                    <%= f.password_field :password, class: "form-control" %>
                    <br>
                    <label>Password Confirmation</label><br>
                    <%= f.password_field :password_confirmation, class: "form-control" %>
                    <br>
                    <%= f.label :email %><br>
                    <%= f.email_field :email, class: "form-control" %>
                    <br>
                    <%= f.label :city %><br>
                    <%= f.text_field :city, class: "form-control" %>
                    <br>
                    <%= f.label :state %><br>
                    <%= f.text_field :state, class: "form-control" %>
                    <br>
                    <%= f.label :bio %><br>
                    <%= f.text_field :bio, class: "form-control" %>
                    <br>
                    <br>
                    <%= f.submit "Submit", class: "btn btn-primary" %>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col">
            <div id="new-user-picture-container">
                <div id="new-user-text">
                    <h1 id="new-user-header-2">Create A New User</h1>
                    <h3 id="new-user-lead" class="lead">Sign up fo Healthy skin!</h3>
                </div>
            </div>
        </div>
    </div>
</div>
</div>